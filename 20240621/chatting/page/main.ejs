<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>귓속말</title>
    <script src="/socket.io/socket.io.js"></script>
    <script>
        // 연결요청을 보냄
        const socket = new io.connect("ws://192.168.0.9:3000");
        //const socket = new io.connect("ws://localhost:3000");
        // 소켓 연결
        // on 메서드가 이벤트를 구독하겠다.
        // whisper 문자열로 이벤트의 명을 지어주고
        // 발생한 이벤트 명이 whisper면 
        // 핸들러 함수 호출하겠다.
        socket.on("whisper", (data) => {
            alert(`귓속말 받았어: ${data}`);
        })

        window.onload = () => {
            document.onkeyup = (e) => {
                if (e.keyCode === 13) {
                    onSubmit();
                }
            }
        }
        function initText() {
            uid.value = "";
            content.value = "";
        }
        function onSubmit() {
            // emit여기선 클라이언트에서 서버로 요청
            socket.emit("ServerWhisper", { msg: content.value, id: uid.value });
        }
    </script>
</head>

<body>

    <div>
        <label for="">사용자 아이디</label>
        <input type="text" id="uid">
        <label for="">내용</label>
        <input type="text" id="content">
        <button onclick="onSubmit()">확인</button>
    </div>

</body>

</html>